generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id       Int       @id @default(autoincrement())
  title    String
  blog     String
  catagory String
  date     DateTime? @default(now())
  image    String?
  nickname String?
  comments Comment[]
}
model Comment {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
  postId    Int
  post      Post     @relation(fields: [postId], references: [id])
}
enum Category {
  TECHNOLOGY
  FOOD
  TRAVEL
  EDUCATION
}
